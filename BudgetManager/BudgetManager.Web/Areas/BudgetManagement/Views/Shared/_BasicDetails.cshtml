@model BudgetManager.Web.Areas.BudgetManagement.Models.BudgetDetails
<div class="widget-box">
    <div class="widget-header">
        <h4>Basic Details</h4>
    </div>
    <div class="widget-body">
        <div class="widget-main">
            <div class="row-fluid">
                <div class="span3">
                    <label for="form-field-8">Budget Name</label>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <div class="row-fluid input-append">
                            @Html.TextBoxFor(m => m.BudgetName, htmlAttributes: new { placeholder = "Budget Name", @class = "input-large" })
                            <span class="add-on">
                                <i class="icon-keyboard"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="span4">@Html.ValidationMessageFor(m => m.BudgetName)</div>
            </div>

            <div class="row-fluid">
                <div class="span3">
                    <label for="form-field-9">Description</label>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <div class="row-fluid">
                            @Html.TextAreaFor(m => m.BudgetDescription, htmlAttributes: new { placeholder = "Budget Description", @class = "input-large limited", rows = "1", cols = "20" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span3">
                    <label for="form-field-9">Type</label>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <div class="row-fluid">
                            @Html.DropDownListFor(category => category.SelectedCategory, Model.Categories, string.Empty, htmlAttributes: new { @class = "chzn-select", data_placeholder = "Select a category" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span3">
                    <label for="form-field-mask-1">
                        @Html.LabelFor(m => m.BudgetPeriod)
                    </label>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <div class="row-fluid input-append calendar">
                            @Html.TextBoxFor(m => m.BudgetPeriod, htmlAttributes: new { id = "BudgetPeriod", placeholder = "Budget Period", data_format = "dd/MM/yyyy" })
                            <span class="add-on">
                                <i class="icon-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="span4">@Html.ValidationMessageFor(m => m.BudgetPeriod)</div>
            </div>
            <div class="row-fluid">
                <div class="span3">
                    <label for="form-field-mask-3">
                        @Html.LabelFor(m => m.MinimumAmountAllocated)
                    </label>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <div class="row-fluid input-append">
                            @Html.TextBoxFor(m => m.MinimumAmountAllocated, htmlAttributes: new { placeholder = "Minimum Amount", @class = "input-large input-mask-product" })
                            <span class="add-on">
                                <i class="icon-inr"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="span4">@Html.ValidationMessageFor(m => m.MinimumAmountAllocated)</div>
            </div>
            <div class="row-fluid">
                <div class="span3">
                    <label for="form-field-mask-3">
                        @Html.LabelFor(m => m.MaximumAmountAllocated)
                    </label>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <div class="row-fluid input-append">
                            @Html.TextBoxFor(m => m.MaximumAmountAllocated, htmlAttributes: new { placeholder = "Maximum Amount", @class = "input-large input-mask-product" })
                            <span class="add-on">
                                <i class="icon-inr"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="span4">@Html.ValidationMessageFor(m => m.MaximumAmountAllocated)</div>
            </div>
        </div>
    </div>
</div>
