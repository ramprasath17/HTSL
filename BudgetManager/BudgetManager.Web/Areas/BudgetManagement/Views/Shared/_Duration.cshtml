@model BudgetManager.Web.Areas.BudgetManagement.Models.BudgetDetails
<div class="widget-box">
    <div class="widget-header">
        <h4>Budget Period</h4>
    </div>
    <div class="widget-body">
        <div class="widget-main">
            <div class="row-fluid">
                <div class="span2">
                    <label for="form-field-mask-1">
                        @Html.LabelFor(m => m.StartDate)
                    </label>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <div class="row-fluid input-append calendar">
                            @Html.TextBoxFor(m => m.StartDate, htmlAttributes: new { id = "StartDate", placeholder = "Start Date", @class = "input-large date-picker", data_format = "dd MM yyyy" })
                            <span class="add-on">
                                <i class="icon-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="span4">@Html.ValidationMessageFor(m => m.StartDate)</div>
            </div>
            <div class="row-fluid">
                <div class="span2">
                    <label for="form-field-mask-1">
                        @Html.LabelFor(m => m.EndDate)
                    </label>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <div class="row-fluid input-append calendar">
                            @Html.TextBoxFor(m => m.EndDate, htmlAttributes: new { id = "enddate", placeholder = "End Date", @class = "input-large date-picker", data_format = "dd MM yyyy" })
                            <span class="add-on">
                                <i class="icon-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="span4">@Html.ValidationMessageFor(m => m.EndDate)</div>
            </div>
            <div class="row-fluid">
                <div class="span2">
                    <label for="form-field-mask-1">
                        @Html.LabelFor(m => m.BudgetPeriod)
                    </label>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <div class="row-fluid input-append calendar">
                            @Html.TextBoxFor(m => m.BudgetPeriod, htmlAttributes: new { id = "BudgetPeriod", placeholder = "Budget Period", @class = "input-large date-picker", data_format = "dd/MM/yyyy" })
                            <span class="add-on">
                                <i class="icon-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="span4">@Html.ValidationMessageFor(m => m.EndDate)</div>
            </div>
        </div>
    </div>
</div>
