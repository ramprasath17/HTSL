@{
    ViewBag.Title = "Index";
    Layout = null;
}
@Styles.Render("~/bundles/homeTheme")
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Budget Manager</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='http://fonts.googleapis.com/css?family=Terminal+Dosis' rel='stylesheet' type='text/css' />
</head>
<body>
    <div class="container">
        <div class="header">
            @Html.ActionLink("Budget Manager", "Home", "Account")
            <span class="right">
                @Html.ActionLink("Log In", "Login", "Account")
                @Html.ActionLink("Sign Up", "Register", "Account")
            </span>
            <div class="clr"></div>
        </div>
        <h1>Budget Manager <span>Manage your budget with ease</span></h1>
        <div class="content">
            <div class="more">
                <ul>
                </ul>
            </div>
            <ul class="ca-menu">
                <li>
                    <a href="#">
                        <span class="ca-icon">F</span>
                        <div class="ca-content">
                            <h2 class="ca-main">Categorized</h2>
                            <h3 class="ca-sub">Create your budget by category.</h3>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="ca-icon">H</span>
                        <div class="ca-content">
                            <h2 class="ca-main">Expense & Transaction</h2>
                            <h3 class="ca-sub">Get the overall expenses with transactions.</h3>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="ca-icon">K</span>
                        <div class="ca-content">
                            <h2 class="ca-main">Reports</h2>
                            <h3 class="ca-sub">Get the data as reports in both PDF and excel format.</h3>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="ca-icon">L</span>
                        <div class="ca-content">
                            <h2 class="ca-main">Unconditional Support</h2>
                            <h3 class="ca-sub">24/7 for you needs</h3>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Register", routeValues: new { controller = "Account", area = string.Empty})" >
                        <span class="ca-icon">L</span>
                        <div class="ca-content">
                            <h2 class="ca-main">Get started!</h2>
                            <h3 class="ca-sub">Register and try you budget management.</h3>
                        </div>
                    </a>
                </li>
            </ul>
        </div>
        <!-- content -->
    </div>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
</body>
</html>
